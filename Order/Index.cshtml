@using Lab4.ViewModels
@model OrdersViewModel
@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="data-search">
        @using (Html.BeginForm("Index", "Order", FormMethod.Post))
        {
        <fieldset>
            Дата поступления: @Html.TextBox("DateReceipt", Model.OrderViewModel.DateReceipt)
           
            <input type="submit" value="Найти" />
        </fieldset>
        }
    </div>
    <div>
        Услуги
        <table>
            <tr>
                <td>
                    <a asp-controller="Service" asp-action="Index" asp-route-sortOrder="@ViewBag.DateReceiptSort">
                        Дата поступления
                    </a>
                </td>
                <td>
                    <a asp-controller="Service" asp-action="Index" asp-route-sortOrder="@ViewBag.DateCompletionSort">
                        Дата выполнения
                    </a>
                </td>
            </tr>
            @foreach (Order p in Model.PageViewModel)
            {
                <tr>
                    <td>@p.DateReceipt</td>
                    <td>@p.DateCompletion</td>
                </tr>
            }
        </table>
    </div>
</div>
